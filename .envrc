# Helper to set up PATH, enter virtual env etc so that all commands work in shell

if [ -f .pyenv/bin/activate ]; then
    source .pyenv/bin/activate
fi
if [ -f .deno/bin/deno ]; then
    export PATH="$PWD/.deno/bin:$PATH"
    export DENO_INSTALL_ROOT="$PWD/.deno/bin"
    export DENO_DIR="$PWD/.deno/cache"
fi
